<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:orientation="vertical"
    android:background="@drawable/text"
    android:id="@+id/lnsp"
    >

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/imgsp"
            android:src="@drawable/laptop"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:textColor="#131313"
                android:layout_marginTop="5dp"
                android:textSize="17dp"
                android:id="@+id/txtmasanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã sản phẩm:1 " />

            <TextView
                android:textColor="#131313"
                android:layout_marginTop="7dp"
                android:textSize="17dp"
                android:id="@+id/txttensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm: Iphone14 " />

            <TextView
                android:textColor="#131313"
                android:layout_marginTop="7dp"
                android:textSize="17dp"
                android:id="@+id/txtmausac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màu sắc: Trắng " />
            <TextView
                android:textColor="#131313"
                android:layout_marginTop="7dp"
                android:textSize="17dp"
                android:id="@+id/txtsoluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Lượng: 3 " />
            <TextView
                android:textColor="#131313"
                android:layout_marginTop="7dp"
                android:textSize="17dp"
                android:id="@+id/txtgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gía: 45.000.000 VNĐ " />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>