<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Nhân Viên"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edt_Hoten"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_dialog"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24_1"
        android:drawablePadding="20dp"
        android:hint="Họ tên"
        android:padding="18dp"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/edt_ngaysinh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_dialog"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="20dp"
        android:hint="Ngày Sinh"
        android:padding="18dp"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/edt_sodienthoai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_dialog"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="20dp"
        android:hint="Số Điện Thoại"
        android:padding="18dp"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/edt_chucvu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_dialog"
        android:drawableLeft="@drawable/ic_baseline_person_24_1"
        android:drawablePadding="20dp"
        android:hint="Chức vụ"
        android:padding="18dp"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/edt_Tendangnhap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_dialog"
        android:drawableLeft="@drawable/ic_baseline_person_24_1"
        android:drawablePadding="20dp"
        android:hint="Tên đang nhập"
        android:padding="18dp"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/edt_Matkhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_dialog"
        android:drawableLeft="@drawable/ic_baseline_https_24_1"
        android:drawablePadding="20dp"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textSize="13dp"
        tools:ignore="TextSizeCheck" />
    <TextView
        android:textStyle="bold"
        android:textColorHint="#47C0F6"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:hint="CHỌN ẢNH"
        android:layout_width="130dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/imgthemanhnv"
        android:src="@drawable/ic_baseline_picture_in_picture_24"
        android:layout_marginLeft="120dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Them"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dialog"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Thêm"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tv_Thoatnv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="23dp"/>


</LinearLayout>