<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TrangChuFragment">


    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/src"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="60dp">
          <TextView
              android:id="@+id/tvwelcome"
              android:textColor="#8F5705"
              android:textStyle="bold"
             android:textSize="25dp"
              android:text="WELCOME ADMIN"
              android:layout_width="250dp"
              android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tvten"
                android:textColor="#454544"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="WELCOME ADMIN"
                android:layout_width="200dp"
                android:layout_height="20dp"/>
        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/khohang"
            app:civ_border_color="#fff"
            app:civ_border_width="1dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/search_background"
        android:drawableEnd="@drawable/search_svgrepo_com"
        android:hint="Search"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#3B608C"
        android:textColorHint="#9D9595"
        />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/edt_search"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/white_background"
        android:orientation="vertical">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/id_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/id_circleindicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/line2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/id_kho_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/laptop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Laptop/PC"
                    android:textAlignment="center"
                    android:textColor="#3B608C"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_hoa_don"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/hoadon2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Hóa đơn"
                    android:textAlignment="center"
                    android:textColor="#3B608C"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_khach_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/khachhang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Khách hàng"
                    android:textAlignment="center"
                    android:textColor="#3B608C"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/id_doanh_thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/doanhthu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Doanh thu"
                    android:textAlignment="center"
                    android:textColor="#3B608C"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_nhan_vien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconnhanvien"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/accountant" />

                <TextView
                    android:id="@+id/tvnhanvien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Nhân viên"
                    android:textAlignment="center"
                    android:textColor="#3B608C"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_khuyen_mai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/khuyenmai" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Vocher Giảm giá "
                    android:textAlignment="center"
                    android:textColor="#3B608C"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>